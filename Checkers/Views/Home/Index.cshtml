@{
    ViewData["Title"] = "Home Page";
}

<div class="game-field">
@for(int i = 0; i < 8; i++)
{
    @for (int j = 0; j < 8; j++)
    {
        @if ((i + j) % 2 == 0)
        {
            <div class="white-block">(Б)</div>
        }
        else
        {
            <div class="black-block">(Ч)</div>
        }
    }
}
</div>
